<?xml version="1.0" encoding="UTF-8"?>
<plugin
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="mobi.monaca.plugins.BarcodeScanner"
    version="1.0.0">

    <name>BarcodeScanner</name>
	<description>BarcodeScanner</description>
    <engines>
        <engine name="cordova" version=">=2.9.0" />
    </engines>
    <license>Asial</license>
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="org.apache.cordova.barcodeScanner">
                <param name="ios-package" value="CDVBarcodeScanner"/>
            </feature>
        </config-file>
        <header-file src="src/ios/zxing-all-in-one.h" />
        <source-file src="src/ios/zxing-all-in-one.mm" compiler-flags="-fno-objc-arc" />
        <source-file src="src/ios/CDVBarcodeScanner.mm" compiler-flags="-fno-objc-arc" />
    </platform>
</plugin>